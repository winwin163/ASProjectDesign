<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/black"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black"
            android:text="POS前台参数设置"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textAlignment="center"
            />
        <Button
            android:id="@+id/qiantai1"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black"
            android:text="其他参数设置"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="14dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="指定销售柜组"
            android:textColor="@color/white"
            android:textSize="11dp" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>

        <CheckBox
            android:layout_width="33dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="每次运行时是否自动数据交换"
            android:textColor="@color/white"
            android:background="@color/black"
            android:textSize="11dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="14dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="系统背景颜色"
            android:textColor="@color/white"
            android:textSize="11dp" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>

        <CheckBox
            android:layout_width="33dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="是否启动自动断、连网模式"
            android:textColor="@color/white"
            android:background="@color/black"
            android:textSize="11dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="14dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <View
            android:layout_width="176dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>
        <CheckBox
            android:layout_width="33dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="开机自动运行声音前台"
            android:textColor="@color/white"
            android:background="@color/black"
            android:textSize="11dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="14dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="33dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="是否有打印机"
            android:textColor="@color/white"
            android:background="@color/black"
            android:textSize="11dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="14dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="打印机型号："
            android:textColor="@color/white"
            android:textSize="11dp" />

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>

        <CheckBox
            android:layout_width="33dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="抬头打印大体文字"
            android:textColor="@color/white"
            android:background="@color/black"
            android:textSize="11dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="14dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="打印机端口："
            android:textColor="@color/white"
            android:textSize="11dp" />

        <Spinner
            android:id="@+id/spinner4"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="打印份数："
            android:textColor="@color/white"
            android:textSize="11dp" />
        <EditText
            android:layout_width="25dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="储卡消费打印份数："
            android:textColor="@color/white"
            android:textSize="11dp" />
        <EditText
            android:layout_width="25dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="14dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="打印方式："
            android:textColor="@color/white"
            android:textSize="11dp" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="收款时打印"
                android:textSize="11dp" />

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="输入时打印"
                android:textSize="11dp" />
        </RadioGroup>
        <CheckBox
            android:layout_width="33dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="上单打印完毕打印下单标题"
            android:textColor="@color/white"
            android:textSize="11dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="14dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="走纸行数  走头"
            android:textColor="@color/white"
            android:textSize="11dp" />

        <EditText
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:background="@color/white" />
        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="走尾"
            android:textColor="@color/white"
            android:textSize="11dp"/>
        <EditText
            android:layout_width="20dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:text="打印字体"
            android:textColor="@color/white"
            android:background="@color/black"
            android:textSize="11dp"/>

        <Spinner
            android:id="@+id/spinner5"
            android:layout_width="40dp"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="大小："
            android:textColor="@color/white"
            android:textSize="11dp" />

        <Spinner
            android:id="@+id/spinner6"
            android:layout_width="40dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="加粗"
            android:textColor="@color/white"
            android:textSize="11dp" />

        <Spinner
            android:id="@+id/spinner7"
            android:layout_width="50dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="14dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="驱动默认打印机："
            android:textColor="@color/white"
            android:textSize="11dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="14dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="33dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="是否有顾客显示屏"
            android:textColor="@color/white"
            android:background="@color/black"
            android:textSize="11dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="F2顾客显示屏"
            android:textColor="@color/white"
            android:background="@color/black"
            android:textSize="11dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="14dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="顾显型号："
            android:textColor="@color/white"
            android:textSize="11dp" />

        <Spinner
            android:id="@+id/spinner8"
            android:layout_width="80dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="顾显端口波特率设置："
            android:textColor="@color/white"
            android:textSize="11dp" />

        <Spinner
            android:id="@+id/spinner9"
            android:layout_width="110dp"
            android:layout_height="match_parent" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="14dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="顾显端口："
            android:textColor="@color/white"
            android:textSize="11dp" />

        <Spinner
            android:id="@+id/spinner10"
            android:layout_width="80dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="输入单位时显示："
            android:textColor="@color/white"
            android:textSize="11dp" />

        <Spinner
            android:id="@+id/spinner11"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="语音"
            android:textColor="@color/white"
            android:textSize="11dp" />

        <Spinner
            android:id="@+id/spinner12"
            android:layout_width="60dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="14dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="顾显延时："
            android:textColor="@color/white"
            android:textSize="11dp" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@color/white" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="毫秒"
            android:textColor="@color/white"
            android:textSize="11dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="14dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="33dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="是否有钱箱"
            android:textColor="@color/white"
            android:background="@color/black"
            android:textSize="11dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="14dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="33dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="设置单尾脚注（多行中间用@分隔）"
            android:textColor="@color/white"
            android:background="@color/black"
            android:textSize="11dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">


        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:text="按回车键保存当前配置，Esc键关闭..."
            android:textColor="@color/white"
            android:background="@color/black"
            android:textSize="11dp"/>

        <Button
            android:id="@+id/qiangtai2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="初始化默认设置"
            android:textSize="8dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
           />
    </LinearLayout>

</LinearLayout>

