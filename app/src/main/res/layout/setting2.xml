<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/black"
        android:orientation="horizontal">

        <Button
            android:id="@+id/qita1"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black"
            android:text="POS前台参数设置"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black"
            android:text="其他参数设置"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textAlignment="center"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="14dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="33dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="是否双屏"
            android:textColor="@color/white"
            android:background="@color/black"
            android:textSize="11dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:background="@color/black"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="15dp"
            android:text="双屏显示："
            android:textColor="@color/white"
            android:background="@color/black"
            android:textSize="11dp"/>
        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio0"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:checked="true"
                android:text="使用媒体广告文件（.mpg、.mpeg、.avi、.asf、.wmv）"
                android:textSize="10dp"
                android:textColor="@color/white"/>

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="循环显示图片（800x600)(.jpeg、.jpg、.gif等）"
                android:textSize="10dp"
                android:textColor="@color/white"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="15dp"
        android:background="@color/black"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="显示时间（秒）："
            android:textColor="@color/white"
            android:textSize="11dp" />

        <EditText
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:background="@color/white" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="14dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="广告文件路径："
            android:textColor="@color/white"
            android:textSize="11dp" />

        <Spinner
            android:id="@+id/spinnerq1"
            android:layout_width="300dp"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="14dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="图片文件路径："
            android:textColor="@color/white"
            android:textSize="11dp" />

        <Spinner
            android:id="@+id/spinnerq2"
            android:layout_width="300dp"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <View
        android:layout_width="80dp"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="14dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="副屏分辨率："
            android:textColor="@color/white"
            android:textSize="11dp" />

        <Spinner
            android:id="@+id/spinnerq3"
            android:layout_width="300dp"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="14dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="滚动字幕："
            android:textColor="@color/white"
            android:textSize="11dp" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="14dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="31dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="显示购买商品列表"
            android:textColor="@color/white"
            android:background="@color/black"
            android:textSize="11dp"/>
        <CheckBox
            android:layout_width="31dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="销售时显示商品图片"
            android:textColor="@color/white"
            android:background="@color/black"
            android:textSize="11dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="14dp"
        android:background="@color/black"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="背景颜色:"
            android:textColor="@color/white"
            android:background="@color/black"
            android:textSize="11dp"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@color/black"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="文字颜色："
            android:textColor="@color/white"
            android:background="@color/black"
            android:textSize="11dp"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:background="@color/black"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="33dp"
            android:layout_height="15dp"
            android:background="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="是否有串口直连电子秤"
            android:textColor="@color/white"
            android:background="@color/black"
            android:textSize="11dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="14dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="33dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="其他设置"
            android:textColor="@color/white"
            android:background="@color/black"
            android:textSize="11dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="14dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="小票语言："
            android:textColor="@color/white"
            android:textSize="11dp" />

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="70dp"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="充值凭证打印份数"
            android:textColor="@color/white"
            android:background="@color/black"
            android:textSize="11dp"/>

        <EditText
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:background="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="默认结算方式："
            android:textColor="@color/white"
            android:background="@color/black"
            android:textSize="11dp"/>

        <Spinner
            android:id="@+id/spinnerq4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="14dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:text="抹零方式："
            android:textColor="@color/white"
            android:textSize="11dp" />

        <Spinner
            android:id="@+id/spinner5"
            android:layout_width="70dp"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="小票商品编码显示"
            android:textColor="@color/white"
            android:background="@color/black"
            android:textSize="11dp"/>

        <Spinner
            android:id="@+id/spinnerq6"
            android:layout_width="37dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="默认结算方式："
            android:textColor="@color/white"
            android:background="@color/black"
            android:textSize="11dp"/>

        <Spinner
            android:id="@+id/spinnerq7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="14dp"
        android:background="@color/black"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="31dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="小票打印原价优惠"
            android:textColor="@color/white"
            android:background="@color/black"
            android:textSize="11dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="14dp"
        android:background="@color/black"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="31dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="网络叠加器设置"
            android:textColor="@color/white"
            android:background="@color/black"
            android:textSize="11dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">


        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:text="按回车键保存当前配置，Esc键关闭..."
            android:textColor="@color/white"
            android:background="@color/black"
            android:textSize="11dp"/>

        <Button
            android:id="@+id/qita2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:text="初始化默认设置"
            android:textColor="@color/black"
            android:textSize="8dp" />
    </LinearLayout>

</LinearLayout>